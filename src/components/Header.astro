---
import NEJSLogo from './NEJSLogo.astro';

const discordLink = `https://discord.gg/${import.meta.env.PUBLIC_DISCORD_INVITE_CODE}`;
---

<header class="bg-js-dark sticky top-0 z-50 text-white shadow-lg">
	<div class="mx-auto flex max-w-6xl flex-wrap items-center justify-between px-6 py-4">
		<a href="/" class="flex items-center gap-1 text-white no-underline">
			<NEJSLogo />
			<div class="text-2xl font-semibold">NebraskaJS</div>
		</a>
		<nav class="flex gap-6">
			<a
				href="/about"
				class="hover:border-js-yellow border-b-2 border-transparent py-2 text-white no-underline transition-colors"
			>
				About
			</a>
			<a
				href="/conduct"
				class="hover:border-js-yellow border-b-2 border-transparent py-2 text-white no-underline transition-colors"
			>
				Code of Conduct
			</a>
			<a
				href={discordLink}
				target="_blank"
				class="hover:border-js-yellow border-b-2 border-transparent py-2 text-white no-underline transition-colors"
			>
				Discord
			</a>
		</nav>
	</div>
</header>
